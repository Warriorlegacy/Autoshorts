NODE_ENV=production
PORT=3001

# Security - CHANGE THESE FOR PRODUCTION!
JWT_SECRET=change_this_to_a_secure_random_string_32_chars_or_more

# ====================
# FREE AI SERVICES (Recommended - no cost!)
# ====================

# Groq - Free tier: 1,500 requests/day
# Get key: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# HuggingFace - Free tier available
# Get key: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Murf AI - Text-to-Speech
# Get key: https://murf.ai/api-pricing
MURF_API_KEY=your_murf_api_key_here

# Pexels - Free stock images/videos
# Get key: https://www.pexels.com/api/
PEXELS_API_KEY=your_pexels_api_key_here

# Pollinations AI - Free image generation
# Get key: https://pollination.ai/settings/api
POLLINATION_API_KEY=your_pollination_api_key_here

# Bytez AI - Video generation
# Get key: https://bytez.com/api
BYTEZ_API_KEY=your_bytez_api_key_here

# ====================
# PAID SERVICES (Optional)
# ====================

# Gemini AI - Advanced script generation
# Get key: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ElevenLabs - Premium Text-to-Speech
# Get key: https://elevenlabs.io/app/account
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# HeyGen - Avatar videos
# Get key: https://www.heygen.com/docs/api-reference
HEYGEN_API_KEY=your_heygen_api_key_here

# FAL AI - LTX Video/Mochi
# Get key: https://fal.ai/settings/api-keys
FAL_API_KEY=your_fal_api_key_here

# Replicate - CogVideo
# Get key: https://replicate.com/account/api-tokens
REPLICATE_API_KEY=your_replicate_api_key_here

# SkyReels - Avatar videos
# Get key: https://apifree.ai
SKYREELS_API_KEY=your_skyreels_api_key_here

# ====================
# SOCIAL MEDIA OAUTH
# ====================

# YouTube OAuth (get from https://console.cloud.google.com/)
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
YOUTUBE_REDIRECT_URI=https://yourdomain.com/api/youtube/callback

# Instagram/Facebook OAuth (get from https://developers.facebook.com/)
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_REDIRECT_URI=https://yourdomain.com/api/instagram/callback
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret
INSTAGRAM_REDIRECT_URI=https://yourdomain.com/api/instagram/callback

# Frontend URL for OAuth redirects
FRONTEND_URL=https://yourdomain.com

# ====================
# STORAGE (Optional)
# ====================

# AWS S3 for production file storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=your-bucket-name
AWS_REGION=us-east-1

# ====================
# DATABASE & CACHE
# ====================

# Redis (included in docker-compose)
REDIS_URL=redis://redis:6379

# PostgreSQL (optional - uncomment in docker-compose for production)
# DB_HOST=postgres
# DB_PORT=5432
# DB_NAME=autoshorts
# DB_USER=autoshorts
# DB_PASSWORD=your_secure_db_password

# ====================
# URL CONFIGURATION
# ====================

# Backend URL for CORS
BACKEND_URL=http://localhost:3001
